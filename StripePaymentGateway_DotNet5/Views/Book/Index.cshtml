@model IEnumerable<StripePaymentGateway_DotNet5.Models.Book>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-xs-6" style="padding-bottom:35px;">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"> @item.Title <small class="text-muted"> (by: @item.Author)</small> </h5> <br />
                    <p class="card-text"> @item.Description </p>
                    @Html.ActionLink("Show details", "Details", "Book", new { id = item.Id }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Purchase -$"+item.Price, "Purchase", "Checkout", new { id = item.Id }, new { @class = "btn btn-success" })
                </div>
            </div>
        </div>
    }
</div>

